# Docker-specific environment configuration
# Copy this to .env for Docker usage

# Device settings for Docker
DEVICE=cpu  # Change to 'cuda' if using GPU container

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Logging
LOG_LEVEL=INFO

# Hugging Face token (optional, for private models)
HF_TOKEN=

# AWS S3 Configuration (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
S3_BUCKET_NAME=

# Model cache directory (inside container)
HF_HOME=/app/.cache/huggingface
TORCH_HOME=/app/.cache/torch

# Performance settings
CUDA_VISIBLE_DEVICES=0  # For GPU containers
OMP_NUM_THREADS=4       # Optimize CPU usage
